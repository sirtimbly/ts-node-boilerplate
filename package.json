{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "A project template for new Node.js projects using Typescript with essential tools for testing",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run lint && rimraf ./dist && tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "dev": "nodemon",
    "start": "npm run build && node dist/main.js",
    "test": "TS_NODE_PROJECT=\"tsconfig.testing.json\" mocha -r ts-node/register tests/**.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MisterQuestions/node-ts-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "eslint",
    "mocha",
    "chai",
    "nodemon"
  ],
  "author": "Fernando Lopez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MisterQuestions/node-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/MisterQuestions/node-ts-boilerplate#readme",
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.7",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "chai": "^4.2.0",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.2",
    "prettier": "2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.6",
    "tslib": "2.2.0",
    "typescript": "4.2.4"
  }
}
